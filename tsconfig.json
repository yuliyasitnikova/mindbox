{
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "strict": true,
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017"
    ],
    "jsx": "react",
    "esModuleInterop": true,
    "baseUrl": "./",
    "rootDir": "./",
    "moduleResolution": "node",
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    "target": "es5",
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "src"
  ]
}
